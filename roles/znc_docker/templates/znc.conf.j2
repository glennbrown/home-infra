// WARNING
//
// Do NOT edit this file while ZNC is running!
// Use webadmin or *controlpanel instead.
//
// Altering this file by hand will forfeit all support.
//
// But if you feel risky, you might want to read help on /znc saveconfig and /znc rehash.
// Also check https://wiki.znc.in/Configuration

AnonIPLimit = 10
AuthOnlyViaModule = false
ConfigWriteDelay = 0
ConnectDelay = 5
HideVersion = true
LoadModule = corecaps
LoadModule = webadmin
LoadModule = adminlog
LoadModule = chansaver
LoadModule = fail2ban
LoadModule = log
LoadModule = modperl
LoadModule = modpython
LoadModule = palaver
MaxBufferSize = {{ znc_max_buffer_size }}
ProtectWebSessions = true
{% if znc_ssl_enable %}
SSLCertFile = /znc-data/znc.pem
SSLDHParamFile = /znc-data/znc.pem
SSLKeyFile = /znc-data/znc.pem
{% endif %}
ServerThrottle = 30
Skin = dark-clouds
StatusPrefix = *
Version = 1.9.0

<Listener web>
	AllowIRC = false
	AllowWeb = true
	IPv4 = true
	IPv6 = false
	Port = {{ znc_web_port }}
{% if znc_ssl_enable %}
	SSL = true
{% endif %}
	URIPrefix = /
</Listener>

<Listener irc>
	AllowIRC = true
	AllowWeb = false
	IPv4 = true
	IPv6 = false
	Port = {{ znc_irc_port }}
{% if znc_ssl_enable %}
	SSL = true
{% endif %}
	URIPrefix = /
</Listener>

<User gbrown>
	Admin = true
	Allow = *
	AltNick = glenn|znc
	AppendTimestamp = false
	AuthOnlyViaModule = false
	AutoClearChanBuffer = false
	AutoClearQueryBuffer = false
	ChanBufferSize = {{ znc_max_buffer_size }}
	ClientEncoding = ^UTF-8
	DenyLoadMod = false
	DenySetBindHost = false
	DenySetCTCPReplies = false
	DenySetIdent = false
	DenySetNetwork = false
	DenySetQuitMsg = false
	DenySetRealName = false
	Ident = gbrown
	JoinTries = 10
	LoadModule = chansaver
	LoadModule = controlpanel
	MaxJoins = 0
	MaxNetworks = 10
	MaxQueryBuffers = 50
	MultiClients = true
	Nick = glenn
	NoTrafficTimeout = 180
	PrependTimestamp = true
	QueryBufferSize = {{ znc_max_buffer_size }}
	QuitMsg = %znc%
	RealName = ZNC - https://znc.in
	TimestampFormat = [%H:%M:%S]
	Timezone = America/New_York

	<Pass password>
		Hash = {{ znc_hash }}
		Method = Argon2id
	</Pass>
</User>