{% block server_redirect %}
{% if item.server_name_redirect is defined %}
{% for redirect in item.server_name_redirect %}
server {
    listen {{ item.listen | default('443 ssl http2') }};
    listen [::]:{{item.listen | default('443 ssl http2') }};
    server_name  {{ redirect }};
    return 301 $scheme://{{ item.server_name.split(' ')[0] }}$request_uri;
}
{% endfor %}
{% endif %}
{% endblock %}

server {
    {% block server_begin %}{% endblock %}

    {% block server_basic -%}
    listen {{ item.listen | default('443 ssl http2') }};
    listen [::]:{{item.listen | default('443 ssl http2') }};

{% if item.server_name is defined %}
    server_name {{ item.server_name }};
{% endif %}

{% if item.root is defined %}
    root {{ item.root }};
{% endif %}

{% if item.index is defined %}
    index {{ item.index }};
{% endif %}

{% if item.error_page is defined %}
    error_page {{ item.error_page }};
{% endif %}
{% if item.access_log is defined %}
    access_log {{ item.access_log }};
{% endif %}
{% if item.error_log is defined %}
    error_log {{ item.error_log }} error;
{% endif %}

{% if item.return is defined %}
    return {{ item.return }};
{% endif %}
    {% endblock %}

    {% block server_end %}{% endblock %}

{% if item.extra_parameters is defined %}
    {{ item.extra_parameters|indent(4) }}
{% endif %}
}
