# snapraid-btrfs-runner configuration
{{ ansible_managed | comment }}
# DO NOT EDIT MANUALLY

[snapraid-btrfs]
executable = {{ snapraid_btrfs_path }}
pool = {{ snapraid_btrfs_pool | lower }}
cleanup = {{ snapraid_btrfs_cleanup | lower }}

[snapper]
executable = {{ snapper_bin_path }}

[snapraid]
executable = {{ snapraid_bin_path }}
config = {{ snapraid_config_path }}
deletethreshold = {{ snapraid_runner_deletethreshold }}
touch = {{ snapraid_runner_touch | lower }}

[scrub]
enabled = {{ snapraid_runner_scrub | lower }}
plan = {{ snapraid_scrub_percent }}
older-than = {{ snapraid_scrub_age }}

[email]
sendon = {{ snapraid_runner_email_sendon }}
short = true
subject = [SnapRAID] Status Report: 
from = {{ snapraid_runner_email_from }}
to = {{ snapraid_runner_email_to }}

[smtp]
host = {{ snapraid_runner_smtp_host }}
port = {{ snapraid_runner_smtp_port }}
ssl = {{ snapraid_runner_use_ssl | lower }}
tls = {{ snapraid_runner_use_tls | lower }}
user = {{ snapraid_runner_smtp_user }}
password = {{ snapraid_runner_smtp_password }}